<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/authorimg"
        android:layout_marginTop="50dp"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/authorname"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/authorimg"
        android:autoLink="web"
        />

    <RatingBar
        android:id="@+id/revrate"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/authorname"
        android:layout_marginStart="82dp"
        android:isIndicator="true"
        android:paddingStart="0dp"
        android:scaleX="1.3"
        android:scaleY="1.3" />

    <TextView
        android:id="@+id/revdate"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/authorimg"
        android:layout_below="@id/revrate"
        android:autoLink="web"
        />

    <TextView
        android:id="@+id/revtext"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/authorimg"
        android:layout_below="@id/revdate"
        android:autoLink="web"
        />

    <TextView
        android:id="@+id/revid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/revtext"
        android:layout_toRightOf="@id/authorimg"
        android:visibility="visible"
        />
</RelativeLayout>